NODE_ENV=development
DATABASE_URL=postgres://ripcord:ripcord@localhost:5432/ripcord
REDIS_URL=redis://localhost:6379

# Auth — CHANGE IN PRODUCTION
JWT_SECRET=change-me-to-a-64-char-random-string-in-production-please!!
JWT_ACCESS_EXPIRES_SEC=900
JWT_REFRESH_EXPIRES_SEC=604800

# Service ports
API_PORT=4000
GATEWAY_PORT=4001
AUTH_PORT=4002
KEY_SERVICE_PORT=4003

# WebAuthn
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Ripcord
WEBAUTHN_ORIGIN=http://localhost:3000

# LiveKit
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_URL=ws://localhost:7880

# MinIO / Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
# Public URL for presigned upload/download URLs (must be reachable from desktop app)
# Required in production — e.g. http://your-vps-ip:9000 or https://s3.yourdomain.com
# MINIO_PUBLIC_URL=http://your-vps-ip:9000

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
